<form {{action 'submit' on='submit'}}>
  {{input type='text' value=signup.username placeholder='username' autofocus=true required=true}}
  {{input type='email' value=signup.identification placeholder='email' required=true}}
  {{input type='password' value=signup.password placeholder='password' required=true}}
  <button class='btn-primary' type='submit'>create account</button>
</form>
