<div class='post'>
  {{#if isCurrentUsersPost}}
    <div class='post-delete'>
      <span class='post-delete' {{action 'deletePost'}}>delete this post</span>
    </div>
  {{/if}}
  <div class='post-header'>
    <span class='img-holder'>
      <span class='img-placeholder'></span>
    </span>
    <span class='username'>{{author}}</span>
    <span class='activity'>{{moment-from-now updatedAt}}</span>
  </div>
  <div class='post-body'>
    <div>
      {{body}}
    </div>
  </div>
  <div class='post-footer'>
    <span class='comment-count' {{action 'toggleComments'}}>
      {{#if commentsVisible}}
        hide
      {{else}}
        {{pluralize comments.length 'comment'}}
      {{/if}}
    </span>
  </div>
  {{#if commentsVisible}}
    {{new-comment post=post}}
    <div class='comments'>
      {{#each sortedComments as |comment|}}
        {{comment-show
          username=comment.user.username
          body=comment.body
          updatedAt=comment.updatedAt}}
      {{/each}}
    </div>
  {{/if}}
</div>
